package apresentacao;

import java.util.Scanner;

import negocio.Estante;
import negocio.Produto;

public class Principal {
	public static void main(String[] args) {
		
			//Declaração de variáveis
			 Scanner leitor = new Scanner(System.in);
			 
			 Produto objProduto = new Produto();
			 
			 //Entrada de dados
			 System.out.print("Digite o nome do produto: ");
			 objProduto.setNome(leitor.nextLine());
			 
			 System.out.print("Digite o número da estante: ");
			 objProduto.setObjEstante(new Estante(leitor.nextLine()));
			 
			 System.out.print("Digite a quantidade de produtos: ");
			 objProduto.setQuantidade(leitor.nextLine());
			 
			 leitor.close();
			 
			 //Saída de dados
			 System.out.println("Título: " + objLivro.getTitulo());
			 System.out.println("Autor: " + objLivro.getObjAutor().getName());
			 System.out.println("Gênero: " + objLivro.getGenero());
			 
		}
	}

}
